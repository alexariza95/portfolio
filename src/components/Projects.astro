---
import { Image } from 'astro:assets';

const projects = [
  {
    title: "Lumina Interface",
    category: "Design System",
    image: "https://images.unsplash.com/photo-1481487484168-9b995ecc1679?q=80&w=2400&auto=format&fit=crop",
    year: "2024",
    description: "A comprehensive design system for a fintech unicorn."
  },
  {
    title: "Vanguard Spaces", 
    category: "Architecture",
    image: "https://images.unsplash.com/photo-1497366216548-37526070297c?q=80&w=2400&auto=format&fit=crop",
    year: "2023",
    description: "Immersive 3D architectural visualization platform."
  },
  {
    title: "Neon Horizon",
    category: "Web Experience", 
    image: "https://images.unsplash.com/photo-1550745165-9bc0b252726f?q=80&w=2400&auto=format&fit=crop",
    year: "2023",
    description: "Award-winning promotional site for a cyberpunk game."
  },
  {
    title: "Serenity App",
    category: "Mobile Application",
    image: "https://images.unsplash.com/photo-1616469829581-73993eb86b02?q=80&w=2400&auto=format&fit=crop",
    year: "2024", 
    description: "Mindfulness and meditation application with 1M+ users."
  }
];
---

<section id="projects" class="relative bg-dark text-white py-32 px-6">
  <div class="max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="flex flex-col md:flex-row justify-between items-end mb-20 gap-8">
      <div>
        <h2 class="text-primary font-medium tracking-widest uppercase mb-4 text-sm animate-on-scroll">Selected Works</h2>
        <p class="font-display text-5xl md:text-7xl font-bold leading-tight animate-on-scroll delay-100">
          Digital <span class="text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-500">Masterpieces</span>
        </p>
      </div>
      <div class="flex items-center gap-4 animate-on-scroll delay-200">
        <span class="h-[1px] w-12 bg-white/20"></span>
        <p class="text-white/60 text-lg">2023 â€” 2024</p>
      </div>
    </div>

    <!-- Projects Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
      {projects.map((project, index) => (
        <a href="#" class="group relative block w-full aspect-[4/3] overflow-hidden rounded-2xl bg-white/5 animate-on-scroll project-card" style={`--delay: ${index * 100}ms`}>
          <!-- Image Container -->
          <div class="absolute inset-0 overflow-hidden">
            <img 
              src={project.image} 
              alt={project.title}
              class="w-full h-full object-cover transform transition-all duration-700 ease-out group-hover:scale-110 group-hover:rotate-1 opacity-80 group-hover:opacity-100"
            />
            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/0 transition-colors duration-500"></div>
          </div>

          <!-- Overlay Content -->
          <div class="absolute inset-0 p-8 flex flex-col justify-between">
            <!-- Top Tags -->
            <div class="flex justify-between items-start transform translate-y-[-20px] opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500 delay-100">
              <span class="px-4 py-1.5 rounded-full bg-white/10 backdrop-blur-md text-sm font-medium border border-white/10">
                {project.category}
              </span>
              <span class="px-4 py-1.5 rounded-full bg-white/10 backdrop-blur-md text-sm font-medium border border-white/10">
                {project.year}
              </span>
            </div>

            <!-- Bottom Content -->
            <div class="transform translate-y-[20px] group-hover:translate-y-0 transition-all duration-500">
              <h3 class="font-display text-3xl md:text-4xl font-bold mb-2 text-white">
                {project.title}
              </h3>
              <div class="h-0 overflow-hidden group-hover:h-auto transition-all duration-500">
                <p class="text-gray-300 transform opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-200">
                  {project.description}
                </p>
              </div>
            </div>
            
            <!-- Arrow Icon (Appears on Hover) -->
            <div class="absolute bottom-8 right-8 w-12 h-12 bg-white rounded-full flex items-center justify-center text-dark transform scale-0 group-hover:scale-100 transition-all duration-500 delay-100 shadow-xl">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 rotate-[-45deg] group-hover:rotate-0 transition-transform duration-500">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<script>
  function initProjects() {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: "0px 0px -50px 0px"
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('in-view');
        } else {
          entry.target.classList.remove('in-view');
        }
      });
    }, observerOptions);

    document.querySelectorAll('.animate-on-scroll').forEach((el) => {
      observer.observe(el);
    });
  }

  // Run immediately
  initProjects();
</script>

<style>
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }
  
  .animate-on-scroll.in-view {
    opacity: 1;
    transform: translateY(0);
  }

  /* Staggered delays for grid items */
  .project-card.in-view {
    transition-delay: var(--delay, 0ms);
  }

  .delay-100 { transition-delay: 100ms; }
  .delay-200 { transition-delay: 200ms; }
</style>
